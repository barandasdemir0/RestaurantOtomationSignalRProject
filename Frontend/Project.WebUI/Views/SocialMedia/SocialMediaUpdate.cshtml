@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "SocialMediaUpdate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title"> Sosyal Medya Hesabı Güncelleme</div>
                        </div>
                        <input type="hidden" class="form-control" asp-for="SocialMediaID" >
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlık Giriniz</label>
                                <input type="text" class="form-control" asp-for="SocialMediaTitle" >
                            </div>
                        </div>
                        
                        <div class="card-body">
                            <div class="form-group">
                                <label >İkon Giriniz</label>
                                <input type="text" class="form-control" asp-for="SocialMediaIcon" >
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label >Link Giriniz</label>
                                <input type="text" class="form-control" asp-for="SocialMediaUrl" >
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Sosyal Medya Hesabını Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


