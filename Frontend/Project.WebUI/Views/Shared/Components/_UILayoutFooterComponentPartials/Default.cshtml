@model List<ResultContactDto>
@foreach(var item in Model)
{
    <footer class="footer_section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 footer-col">
                    <div class="footer_contact">
                        <h4>
                            Bizimle İletişime Geç
                        </h4>
                        <div class="contact_link_box">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>
                                    <iframe src="@ViewBag.location" width="120" height="120" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>
                                   @item.ContactPhone
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>
                                   @item.ContactMail
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <div class="footer_detail">
                        <a href="" class="footer-logo">
                            Yazılım Restaurant
                        </a>
                        <p>
                          @item.FooterDescription
                        </p>
                        @await Component.InvokeAsync("_UILayoutSocialMediaPartialComponent")
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <h4>
                        @item.OpenDays
                    </h4>
                    <p>
                        @item.OpenDaysDescription
                    </p>
                    <p>
                        @item.OpenHours
                    </p>
                </div>
            </div>
            <div class="footer-info">
                <p>
                    &copy; <span id="displayYear"></span> Bütün Hakları Saklıdır
                    &copy; <span id="displayYear"></span> Bu Site
                    <a href="https://github.com/barandasdemir0/" target="_blank">Baran Daşdemir</a> Tarafından Yapılmıştır.
                </p>
            </div>
        </div>
    </footer>
}
