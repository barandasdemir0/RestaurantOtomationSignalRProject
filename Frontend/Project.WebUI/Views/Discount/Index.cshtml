@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Günün İndirimleri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Günün İndirimleri Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Günün İndirimli Ürünleri Aşağıda Yer Almaktadır. Tema Bütünlüğü İçin <strong>2 Adet</strong> İndirimli Ürün Seçiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün</th>
									<th scope="col">İndirim Oranı</th>
@* 									<th scope="col">Durum</th> *@
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Aktif Yap</th>
									<th scope="col">Pasif Yap</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<th>@(++count)</th>
										<td>@item.DiscountTitle</td>
										<td>@item.DiscountAmount</td>
										@* 										<td>@item.Status</td> *@
										<td><a href="/Discount/DiscountDelete/@item.DiscountID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Discount/DiscountUpdate/@item.DiscountID" class="btn btn-outline-success">Güncelle</a></td>
										<td><a href="/Discount/ChangeStatusToTrue/@item.DiscountID" class="btn btn-outline-warning">Aktif Yap</a></td>
										<td><a href="/Discount/ChangeStatusToFalse/@item.DiscountID" class="btn btn-outline-dark">Pasif Yap</a></td>

									</tr>
								}
							</tbody>
						</table>
						
							@if (Model.Count < 2 )
							{
								<a href="/Discount/DiscountCreate/" class="btn btn-outline-primary">Yeni İndirimli Ürün Girişi</a>
							}
							@if (Model.Count > 3)
							{
								<div class="card-sub">
									Günün İndirimli Ürünleri Aşağıda Yer Almaktadır. Tema Bütünlüğü İçin <strong>2 Adet</strong> İndirimli Ürün Seçiniz.
								</div>
							}
									
						
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

