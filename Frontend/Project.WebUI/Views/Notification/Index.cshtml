@model List<ResultNotificationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Bildirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Bildirim Açıklaması</th>
                                    <th scope="col">Bildirim Tarihi</th>
                                    <th scope="col">Bildirim Durumu</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Okundu  işaretle</th>
                                    <th scope="col">Okunmadı  İşaretle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(++count)</td>
                                        <td>@item.Description</td>
                                        <td>@item.Date.ToShortDateString()</td>
                                        @if (item.Status)
                                        {
                                            <td>Aktif olmayan Bildirim</td>
                                        }
                                        else
                                        {
                                            <td>Aktif  Bildirim</td>
                                        }

                                        <td><a href="/Notification/NotificationDelete/@item.NotificationID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Notification/NotificationsUpdate/@item.NotificationID" class="btn btn-outline-warning">Güncelle</a></td>
                                        <td><a href="/Notification/NotificationsChangeToTrue/@item.NotificationID" class="btn btn-outline-primary">Okundu</a></td>
                                        <td><a href="/Notification/NotificationsChangeToFalse/@item.NotificationID" class="btn btn-outline-secondary">Okunmadı</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                    <a href="/Notification/NotificationsCreate/" class="btn btn-outline-success">Ekle</a>
                </div>

            </div>

        </div>
    </div>
</div>


