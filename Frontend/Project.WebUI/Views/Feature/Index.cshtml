@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne Çıkan Alan Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ana Sayfada Öne Çıkan Alan ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz. <strong>Lütfen sadece 1 tane öne çıkan alan verisi oluşturun.</strong>
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Başlık 1</th>
									<th scope="col">Başlık 2</th>
									<th scope="col">Başlık 3</th>
									<th scope="col">Açıklama 1</th>
									<th scope="col">Açıklama 2</th>
									<th scope="col">Açıklama 3</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.FeatureTitle1</td>
										<td>@item.FeatureTitle2</td>
										<td>@item.FeatureTitle3</td>
										<td>@item.FeatureDescription1</td>
										<td>@item.FeatureDescription2</td>
										<td>@item.FeatureDescription3</td>
										<td><a href="/Feature/FeatureDelete/@item.FeatureID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Feature/FeatureUpdate/@item.FeatureID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						@if (Model.Count<=1)
						{
							<a href="/Feature/FeatureCreate/" class="btn btn-outline-primary">Yeni Öne Çıkan Alan Girişi</a>
						}
					@if (Model.Count>2)
						{
							<div class="card-sub">
								Ana Sayfada Öne Çıkan Alan ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz. <strong>Lütfen sadece 1 tane öne çıkan alan verisi oluşturun.</strong>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

