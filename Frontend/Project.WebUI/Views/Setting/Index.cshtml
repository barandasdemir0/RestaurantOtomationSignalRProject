@model UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Adınız </label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Adınız">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>SoyAdınız </label>
                                <input type="text" class="form-control" asp-for="Surname" placeholder="SoyAdınız">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Kullanıcı Adınız </label>
                                <input type="text" class="form-control" asp-for="Username" placeholder="Kullanıcı Adınız">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Mailiniz </label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Mailiniz">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Şifreniz </label>
                                <input type="text" class="form-control" asp-for="Password" placeholder="Şifreniz">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Şifreniz  Tekrar</label>
                                <input type="text" class="form-control" asp-for="ConfirmPassword" placeholder="Şifreniz Tekrar">
                            </div>
                        </div>

                        <div class="card-action">
                            <button class="btn btn-outline-primary">Güncelle</button>
                        </div>

                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

