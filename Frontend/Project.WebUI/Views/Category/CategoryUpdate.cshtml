@model UpdateCategoryDto
@{
    ViewData["Title"] = "CategoryUpdate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <input type="hidden" asp-for="CategoryID" />
                                <label>Kategori Adı</label>
                                <input type="text" class="form-control" asp-for="CategoryName" placeholder="Kategori Adı">
                            </div>
                        </div>

                        <div class="card-action">
                            <button class="btn btn-outline-primary">Güncelle</button>
                        </div>

                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


