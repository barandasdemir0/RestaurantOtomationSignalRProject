@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategori Listesi</div>
                    </div>
                    <div class="card-body">
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@(++count)</td>
                                        <td>@item.CategoryName</td>
                                        @if (item.CategoryStatus)
                                        {
                                            <td>Aktif Kategori</td>
                                        }
                                        else
                                        {
                                            <td>Aktif olmayan Kategori</td>
                                        }

                                        <td><a href="/Category/CategoryDelete/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Category/CategoryUpdate/@item.CategoryID" class="btn btn-outline-warning">Güncelle</a></td>
                                    </tr>
                                }   
                              
                               
                            </tbody>
                        </table>
                    </div>
                    <a href="/Category/CategoryCreate/" class="btn btn-outline-success">Ekle</a>
                </div>

            </div>

        </div>
    </div>
</div>
