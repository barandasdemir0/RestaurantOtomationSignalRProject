@model List<ResultBasketDto>
@{
    Layout = null;
    int count = 0;
}

<!DOCTYPE html>
<html>

    @await Component.InvokeAsync("_UILayoutHeadComponentPartials")
    @await Component.InvokeAsync("_UILayoutNavbarComponentPartials")

<body>
    <div class="container-fluid">
        <div class="row pt-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="/Default/Index/">Ana Sayfa</a>
                    <a class="breadcrumb-item text-dark" href="/Menu/Index/">Menü</a>
                    <span class="breadcrumb-item active">Sepetiniz</span>
                </nav>
            </div>
        </div>
    </div>

    <div class="container-fluid">
            <div class="row px-xl-5">
                <div class="col-lg-8 table-responsive mb-5">
                    <table class="table table-light table-borderless table-hover text-center mb-0">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Ürün Adet</th>
                                <th>Ürün Fiyat</th>
                                <th>Ürün Toplam</th>
                                <th>Ürün Sil</th>
                            </tr>
                        </thead>
                        <tbody class="align-middle">
                            @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@(++count)</td>
                                <td class="align-middle">@item.ProductName</td>
                                <td class="align-middle">@item.ProductCount</td>
                                <td class="align-middle">@item.ProductPrice</td>
                                <td class="align-middle">@item.ProductTotalPrice</td>
                                <td class="align-middle  btn-delete"> <button data-basketid="@item.BasketID" id="btndeletebaskedid" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button> </td>
                            </tr>
                        }
                           

                        </tbody>
                    </table>
                </div>
                <div class="col-log-4">
                    <form>
                        <div class="input-group">
                        <input type="text" id="couponcode" class="form-control border-2 p-4 " placeholder="Kupon kodunuz" />
                            <div>
                                <a style="height:48px;padding-top:11px; margin-left:10px;" class="btn btn-warning" id="btncouponcode">Kuponu Uygula</a>
                            </div>
                        </div>
                    </form>
                    <br />
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="btn-outline-secondary pr-3">Sepet Özeti</span></h5>
                    <div class="bg-light p-30 mb-5">
                        <div class="border-bottom pb-2" id="container">
                            <div class="d-flex justify-content-between mb-3">
                                <h6>Toplam Tutar</h6>
                                <h6><span id="totalprice">200</span>₺</h6>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <h6 class="font-weight-medium">Kdv Oranı</h6>
                            <h6 id="totalprice" class="font-weight-medium">20₺</h6>
                            </div>
                            <br />

                        </div>
                        <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Toplam Tutar</h5>
                            <h5><span id="totalpricewithkdv">220</span>₺</h5>
                        </div>
                        <br />

                        <button id="btnchecked" class="btn btn-block btn-warning font-weight-bold my-3">Siparişi Tamamla</button>
                        </div>
                    </div>
                </div>
            </div>
    </div>



    @await Component.InvokeAsync("_UILayoutFooterComponentPartials")
    @await Component.InvokeAsync("_UILayoutScriptComponentPartials")

   

</body>

</html>